<h1>Listing menus</h1>

<table>
  <thead>
    <tr>
      <th>Section</th>
      <th>Menu</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.section %></td>
        <td><%= menu.name %> </td>
        <td><%= menu.price %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu, :restaurant_id => params[:restaurant_id]) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', @restaurant %>
<%= link_to 'New Menu', :controller => 'menus', :action => 'new', :restaurant_id => params[:restaurant_id] %> 
